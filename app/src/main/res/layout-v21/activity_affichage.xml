<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_affichage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3fdf6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Affichage">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingAjout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floatingRetour"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="false"
        android:autofillHints="@color/cardview_shadow_end_color"
        android:background="#fff"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:backgroundTint="@color/cardview_light_background"
        app:elevation="5dp"
        app:fabSize="normal"
        app:rippleColor="@color/cardview_light_background"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:targetApi="o" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingRetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="false"
        android:autofillHints="@color/cardview_shadow_end_color"
        android:background="#fff"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:backgroundTint="#369936"
        app:elevation="5dp"
        app:fabSize="normal"
        app:rippleColor="@color/cardview_light_background"
        app:srcCompat="@drawable/ic_home_black_24dp"
        tools:targetApi="o"
        tools:ignore="VectorDrawableCompat" />

    <ListView
        android:id="@+id/listeview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:numColumns="auto_fit"
        android:padding="5dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                tools:text="toto" />

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:text="toto" />

</RelativeLayout>
