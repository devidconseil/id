<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_demande"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#717C7D"
    tools:context="com.example.hp.madose.Demande">


    <EditText
        android:id="@+id/dateDemande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Date "
        android:inputType="date"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/common_action_bar_splitter" />

        <Button
            android:id="@+id/annul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="65dp"
            android:backgroundTint="#41AEFF"
            android:text="Enregistrer"
            android:textColor="@color/cardview_light_background" />

        <EditText
            android:id="@+id/editqt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ajout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/common_action_bar_splitter"
            android:ems="10"
            android:hint="Quantité"
            android:inputType="number"
           />

        <AutoCompleteTextView
            android:id="@+id/autoCompBes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editqt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/common_action_bar_splitter"
            android:hint="Besoin"
            />

        <AutoCompleteTextView
            android:id="@+id/autoCompDep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/autoCompBes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Departement"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/common_action_bar_splitter"
            android:visibility="invisible" />

        <Button
            android:id="@+id/ajout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/annul"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/cardview_light_background"
            android:text="Ajouter"
            android:textColor="@android:color/holo_blue_dark" />

        <AutoCompleteTextView
            android:id="@+id/autoCompEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/autoCompBes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Employé"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="@color/common_action_bar_splitter"
            tools:visibility="visible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radio_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Le bénéficiaire est un :"
        android:textColor="#fff"
        android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/autoCompEmp"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/radioButton_emp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/autoCompEmp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="Employé"
                android:textColor="#fff" />

            <RadioButton
                android:id="@+id/radioButton_dep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/autoCompEmp"
                android:layout_toRightOf="@id/radioButton_emp"
                android:layout_weight="1"
                android:text="Departement"
                android:textColor="#fff" />
        </RadioGroup>



        <Button
            android:id="@+id/dquitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#ff6666"
            android:text="Quitter"
            android:textColor="@android:color/background_light" />

</RelativeLayout>
