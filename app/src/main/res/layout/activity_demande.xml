<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_demande"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_action_bar_splitter"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Demande">

    <EditText
        android:id="@+id/dateDemande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Date "
        android:inputType="date" />

    <Button
        android:id="@+id/annul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:backgroundTint="#27a69a"
        android:text="Enregistrer"
        android:textColor="@color/cardview_light_background" />

    <EditText
        android:id="@+id/editqt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ajout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Quantité"
        android:inputType="number" />

    <AutoCompleteTextView
        android:id="@+id/autoCompBes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editqt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Besoin" />

    <AutoCompleteTextView
        android:id="@+id/autoCompDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/autoCompBes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Departement"
        android:visibility="invisible" />

    <Button
        android:id="@+id/ajout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/annul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/cardview_light_background"
        android:text="Ajouter"
        android:textColor="@color/colorAccent" />

    <AutoCompleteTextView
        android:id="@+id/autoCompEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/autoCompBes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Employé"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radio_group"
        android:layout_alignParentLeft="true"
        android:text="Le bénéficiaire est un :"
        android:textColor="@color/colorPrimaryDark" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/autoCompEmp"
        android:visibility="visible">

        <RadioButton
            android:id="@+id/radioButton_emp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@id/autoCompEmp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_weight="1"
            android:text="Employé" />

        <RadioButton
            android:id="@+id/radioButton_dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/autoCompEmp"
            android:layout_toRightOf="@id/radioButton_emp"


            android:layout_weight="1"
            android:text="Departement" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/cardview_light_background"
        android:text="Quitter"
        android:textColor="@android:color/holo_orange_dark" />


</RelativeLayout>
