<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listeAffich"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7E9"
    android:orientation="vertical"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/listDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/listeS"
                android:backgroundTint="#fff"
                android:text="Demande"
                android:textColor="#2b5a83"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/listeD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#fff"
                android:text="Coût Total"
                android:textColor="#2b5a83"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/listeE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="31dp"
                android:backgroundTint="@color/cardview_light_background"
                android:fontFamily="sans-serif"
                android:text="les entrées"
                android:textColor="#2b5a83"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <!-- <Button
                android:id="@+id/stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rupture"
                android:backgroundTint="#fff"
                android:text="Stock"
                android:textColor="#2b5a83"
                android:textStyle="normal|bold" />-->

            <Button
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/listDe"
                android:backgroundTint="#fff"
                android:text="Les achats"
                android:textColor="#2b5a83"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/listeS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listeE"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/cardview_light_background"
                android:text="Les sorties"
                android:textColor="#2b5a83"
                android:textStyle="normal|bold" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>