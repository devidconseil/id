<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bing_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_action_bar_splitter"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.BringOut">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Date "
                android:inputType="date"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#788287" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/editDate"
                android:text="Le bénéficiaire est un :"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textView7"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employé"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioButtonDep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Departement"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RadioGroup>

            <AutoCompleteTextView
                android:id="@+id/autoEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/autoDep"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Employé"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#788287" />

            <AutoCompleteTextView
                android:id="@+id/autoDep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/autoDep"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Departement"
                android:textColor="#fff"
                android:textColorHint="#788287"
                android:visibility="invisible" />

            <AutoCompleteTextView
                android:id="@+id/autoDemande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/autoEmp"
                android:hint="Date de la demande"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#788287" />

            <AutoCompleteTextView
                android:id="@+id/autoBesoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/autoDemande"
                android:hint="Besoin"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#788287" />

            <EditText
                android:id="@+id/sortieQt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/autoBesoin"
                android:layout_centerVertical="true"
                android:hint="Quantité"
                android:inputType="number"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#788287" />

            <AutoCompleteTextView
                android:id="@+id/autoCompMark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sortieQt"
                android:hint="Marque"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#788287" />

            <AutoCompleteTextView
                android:id="@+id/autoCompAutre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/autoCompMark"
                android:hint="Autres précisions"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#788287" />

            <Button
                android:id="@+id/sortiVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/autoCompAutre"
                android:backgroundTint="@color/common_plus_signin_btn_text_dark_pressed"
                android:text="Ajouter"
                android:textColor="#27a69a" />

            <Button
                android:id="@+id/enreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sortiVal"
                android:backgroundTint="#27a69a"
                android:backgroundTintMode="src_over"
                android:text="Enregistrer"
                android:textColor="#fff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?android:attr/colorForegroundInverse"
                android:text="Quitter"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
