<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bing_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E4E3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.BringOut">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawableRight="@drawable/ic_date_black_24"
                android:background="@drawable/round_corner"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Date "
                android:inputType="date"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editDate"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="Le bénéficiaire est un :"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textView7"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Employé"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioButtonDep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Departement"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RadioGroup>

            <AutoCompleteTextView
                android:id="@+id/autoDep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioGroup"
                android:drawableRight="@drawable/ic_fleche_a_droit_24dp"
                android:background="@drawable/round_corner"
                android:hint="Departement"
                android:visibility="invisible" />

            <AutoCompleteTextView
                android:id="@+id/autoEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioGroup"
                android:background="@drawable/round_corner"
                android:drawableRight="@drawable/ic_fleche_a_droit_24dp"
                android:hint="Employé" />

            <AutoCompleteTextView
                android:id="@+id/autoDemande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableRight="@drawable/ic_fleche_a_droit_24dp"
                android:background="@drawable/round_corner"
                android:layout_below="@+id/autoEmp"
                android:hint="Date de la demande" />

            <AutoCompleteTextView
                android:id="@+id/autoBesoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableRight="@drawable/ic_fleche_a_droit_24dp"
                android:background="@drawable/round_corner"
                android:layout_below="@+id/autoDemande"
                android:hint="Besoin"/>

            <EditText
                android:id="@+id/sortieQt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/autoBesoin"
                android:background="@drawable/round_corner"
                android:layout_centerVertical="true"
                android:hint="Quantité"
                android:inputType="number"
               />

            <AutoCompleteTextView
                android:id="@+id/autoCompMark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/round_corner"
                android:layout_below="@+id/sortieQt"
                android:hint="Marque"/>

            <AutoCompleteTextView
                android:id="@+id/autoCompAutre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/round_corner"
                android:layout_below="@+id/autoCompMark"
                android:hint="Autres précisions" />

            <Button
                android:id="@+id/sortiVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/autoCompAutre"
                android:layout_marginTop="12dp"
                android:backgroundTint="#858687"
                android:drawableRight="@drawable/ic_add_black_24dp"
                android:text="Ajouter"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/enreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sortiVal"
                android:backgroundTint="#858687"
                android:drawableRight="@drawable/ic_save_black_24dp"
                android:text="Enregistrer"
                android:textColor="#fff" />

            <Button
                android:id="@+id/quitte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/enreg"
                android:backgroundTint="#858687"
                android:drawableRight="@drawable/ic_clear_black_24dp"
                android:text="Quitter"
                android:textColor="#fff" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
