<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bing_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#555755"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.BringOut">

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColorHint="#27a69a"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:ems="10"
        android:hint="Date "
        android:inputType="date" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date de la demande"
        android:layout_below="@+id/autoEmp"
        android:textColorHint="#27a69a"
        android:textColor="#fff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/autoDemande" />


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employé"
        android:id="@+id/autoEmp"
        android:textColor="#fff"
        android:textColorHint="#27a69a"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Besoin"
        android:id="@+id/autoBesoin"
        android:textColor="#fff"
        android:textColorHint="#27a69a"
        android:layout_below="@+id/autoDemande"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:id="@+id/autoDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#fff"
        android:textColorHint="#27a69a"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:hint="Departement"
        android:visibility="invisible" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantité"
        android:layout_below="@+id/autoBesoin"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:textColorHint="#27a69a"
        android:inputType="number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/sortieQt" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompMark"
        android:hint="Marque"
        android:textColor="#fff"
        android:textColorHint="#27a69a"
        android:layout_below="@+id/sortieQt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Autres précisions"
        android:textColor="#fff"
        android:textColorHint="#27a69a"
        android:id="@+id/autoCompAutre"
        android:layout_below="@+id/autoCompMark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/sortiVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#27a69a"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/autoCompAutre"
        android:backgroundTint="@color/common_plus_signin_btn_text_dark_pressed"
        android:text="Ajouter" />

    <Button
        android:id="@+id/enreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sortiVal"
        android:backgroundTint="#27a69a"
        android:backgroundTintMode="src_over"
        android:text="Enregistrer"
        android:textColor="#fff" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textView7"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonEmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Employé" />

        <RadioButton
            android:id="@+id/radioButtonDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Departement"
            android:visibility="visible" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editDate"
        android:text="Le bénéficiaire est un :"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold" />

</RelativeLayout>
