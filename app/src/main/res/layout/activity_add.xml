<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#717C7D"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Add">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/datepik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date"

                android:layout_alignParentTop="true"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="#d2d2d2" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fournisseur"
                android:layout_below="@id/datepik"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="#d2d2d2" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteBesoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="#d2d2d2"
                android:hint="Besoin"
                android:layout_below="@id/autoCompleteFour"/>




                <EditText
                    android:id="@+id/PU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="#d2d2d2"
                    android:hint="Prix Unitaire"
                    android:inputType="numberDecimal"
                    android:layout_below="@id/autoCompleteBesoin"
                   />


            <EditText
                android:id="@+id/QT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/PU"
                android:hint="Quantité"
                android:inputType="number"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="#d2d2d2" />


                <EditText
                    android:id="@+id/marq"
                    android:layout_width="match_parent"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="#d2d2d2"
                    android:layout_height="wrap_content"
                    android:hint="Marque"
                    android:layout_below="@id/QT"/>




                <EditText
                    android:id="@+id/autre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="#d2d2d2"
                    android:hint="Autre précision"
                    android:layout_below="@id/marq"/>


            <Button
                android:id="@+id/AjouterEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="Ajouter"
                android:textColor="#41AEFF"
                android:layout_below="@id/autre"/>

            <Button
                android:id="@+id/EnregistrerEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#41AEFF"
                android:text="Enregistrer"
                android:textColor="@color/cardview_light_background"
                android:layout_below="@id/AjouterEn"/>

            <Button
                android:id="@+id/quitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:backgroundTint="#ff6666"
                android:text="Quitter"
                android:textColor="#fff"
                android:layout_below="@id/EnregistrerEn"/>

            <ImageView
                android:id="@+id/boutoun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/datepik"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/add_person" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/boutoun"
                android:layout_alignStart="@+id/boutoun"
                android:layout_alignTop="@+id/autoCompleteBesoin"
                app:srcCompat="@drawable/add_product1" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
