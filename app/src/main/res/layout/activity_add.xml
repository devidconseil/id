<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#717C7D"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Add">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/datepik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/common_action_bar_splitter"
                android:ems="10"
                android:hint="Date"/>

            <AutoCompleteTextView
                android:id="@+id/autoCompleteFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/common_action_bar_splitter"
                android:hint="Fournisseur" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteBesoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/common_action_bar_splitter"
                android:hint="Besoin" />




                <EditText
                    android:id="@+id/PU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/common_action_bar_splitter"
                    android:hint="Prix Unitaire"
                    android:inputType="numberDecimal"
                   />




                <EditText
                    android:id="@+id/QT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quantité"
                    android:inputType="number"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/common_action_bar_splitter" />


                <EditText
                    android:id="@+id/marq"
                    android:layout_width="match_parent"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/common_action_bar_splitter"
                    android:layout_height="wrap_content"
                    android:hint="Marque" />



                <EditText
                    android:id="@+id/autre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/common_action_bar_splitter"
                    android:hint="Autre précision" />


            <Button
                android:id="@+id/AjouterEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="Ajouter"
                android:textColor="#41AEFF" />

            <Button
                android:id="@+id/EnregistrerEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#41AEFF"
                android:text="Enregistrer"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/quitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="#ff6666"
                android:text="Quitter"
                android:textColor="#fff" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
