<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_action_bar_splitter"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Add">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/datepik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fournisseur" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteBesoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Besoin" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/PU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Prix Unitaire"
                    android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/QT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quantité"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/marq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Marque" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/autre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Autre précision" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/AjouterEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:text="Ajouter"
                android:textColor="#27a69a" />

            <Button
                android:id="@+id/EnregistrerEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#27a69a"
                android:text="Enregistrer"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/quitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="@color/cardview_light_background"
                android:text="Quitter"
                android:textColor="@android:color/holo_orange_dark" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
