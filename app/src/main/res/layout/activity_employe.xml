<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#717C7D"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Employe">


    <Button
        android:id="@+id/valEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/autoCompDep"
        android:backgroundTint="#41AEFF"
        android:text="Valider"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/valEmp"
        android:backgroundTint="#ff6666"
        android:text="Quitter"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/nomEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="141dp"
        android:ems="10"
        android:textColorHint="@color/common_action_bar_splitter"
        android:textColor="#fff"
        android:hint="Nom et prÃ©nom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nomEmp"
        android:ems="10"
        android:textColorHint="@color/common_action_bar_splitter"
        android:textColor="#fff"
        android:hint="Profil"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/autoCompDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profil"
        android:ems="10"
        android:textColorHint="@color/common_action_bar_splitter"
        android:textColor="#fff"
        android:hint="Departement"
        android:inputType="textPersonName" />


</RelativeLayout>
