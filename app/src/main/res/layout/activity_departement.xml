<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_departement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#717C7D"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Departement">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:backgroundTint="#000"
        android:textColorHint="#fff">

        <EditText
            android:id="@+id/libdep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#000"
            android:ems="10"
            android:hint="Nom du departement"
            android:inputType="textPersonName"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff"
            android:textColorLink="#fff" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/validez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="270dp"
        android:backgroundTint="#41AEFF"
        android:text="Valider"
        android:textColor="#fff" />

    <Button
        android:id="@+id/annulerDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/validez"
        android:backgroundTint="#ff6666"
        android:text="Annuler"
        android:textColor="#fff" />
</RelativeLayout>
