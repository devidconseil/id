<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_variation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Variation">

    <Button
        android:id="@+id/listeE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listeS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:text="Liste des entrées"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/listeD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rupture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Coût Total"
        android:textColor="@color/colorAccent"
        android:textStyle="normal" />

    <Button
        android:id="@+id/listeS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rupture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:text="Liste des sorties"
        android:textColor="@color/colorAccent"
        android:textStyle="normal" />

    <Button
        android:id="@+id/stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rupture"
        android:text="Stock"
        android:textColor="@color/colorAccent"
        android:textStyle="normal" />

    <Button
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stock"

        android:text="Demande"
        android:textColor="@color/colorAccent"
        android:textStyle="normal" />

    <Button
        android:id="@+id/rupture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Vérifier Rupture de Stock"
        android:textColor="@color/colorAccent"
        android:textStyle="normal" />

</RelativeLayout>
