<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_variation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E4E3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.madose.Variation">

    <Button
        android:id="@+id/listeE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listeS"
        android:backgroundTint="@color/cardview_light_background"
        android:fontFamily="sans-serif"
        android:text="Liste des entrées"
        android:textColor="#2b5a83"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/listeS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rupture"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/cardview_light_background"
        android:text="Liste des sorties"
        android:textColor="#2b5a83"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/listDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rupture"
        android:backgroundTint="#fff"
        android:text="Demande"
        android:textColor="#2b5a83"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/listeD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rupture"
        android:backgroundTint="#fff"
        android:text="Coût Total"
        android:textColor="#2b5a83"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/rupture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:backgroundTint="#fff"
        android:text="Vérifier Rupture de Stock"
        android:textColor="#2b5a83"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listDe"
        android:backgroundTint="#fff"
        android:text="Liste d'achats"
        android:textColor="#2b5a83"
        android:textStyle="normal|bold" />

</RelativeLayout>
